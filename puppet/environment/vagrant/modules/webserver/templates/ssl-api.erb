#!/bin/bash

CWD=$(PWD)
cd <%= @pkey_path_api %>
openssl req -x509 -nodes -days <%= @cert_days_api %> \
    -newkey rsa:<%= @cert_bit_api %> \
    -keyout <%= @pkey_path_api %>/<%= @vhost_api %>.key \
    -out <%= @cert_path_api %>/<%= @vhost_api %>.crt \
    -subj '/C=<%= @cert_country_api %>/ST=<%= @cert_state_api %>/L=<%= @cert_locality_api %>/O=<%= @cert_org_api %>/OU=<%= @cert_unit_api %>/CN=<%= @vhost_api %>'
cd "$CWD"
