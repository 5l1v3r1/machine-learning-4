#!/bin/bash

## local variables
CMD="$1"
CWD=$(pwd)

if [ "$2" ]; then
    BASEDIR="$2"
else
    BASEDIR='.'
fi

## install linters
if [ "$CMD" = 'install' ]; then
    ## install ruby: needed for scss-lint
    if ! ruby -v &> /dev/null; then
        curl -sL https://deb.nodesource.com/setup_8.x | sudo -E bash -
        curl -sS https://dl.yarnpkg.com/debian/pubkey.gpg | sudo apt-key add -
        echo "deb https://dl.yarnpkg.com/debian/ stable main" | sudo tee /etc/apt/sources.list.d/yarn.list

        sudo apt-get update
        sudo apt-get -y install git-core curl zlib1g-dev build-essential libssl-dev libreadline-dev libyaml-dev libsqlite3-dev sqlite3 libxml2-dev libxslt1-dev libcurl4-openssl-dev python-software-properties libffi-dev nodejs yarn

        cd /root
        wget http://ftp.ruby-lang.org/pub/ruby/2.4/ruby-2.4.2.tar.gz
        tar -xzvf ruby-2.4.2.tar.gz
        cd ruby-2.4.2/ || exit
        ./configure
        make
        sudo make install
    fi

    ## install puppet
    if ! /opt/puppetlabs/bin/puppet -V &> /dev/null; then
        wget https://apt.puppetlabs.com/puppetlabs-release-pc1-trusty.deb
        sudo dpkg -i puppetlabs-release-pc1-trusty.deb
        sudo apt-get update
        sudo apt-get install -y puppet-agent=1.10.9-1trusty
    fi

    ##
    ## @trusty-backports, allows additional packages (i.e. shellcheck) to be installed
    ##
    sudo add-apt-repository "deb http://archive.ubuntu.com/ubuntu/ trusty-backports restricted main universe"

    ## install linters
    pip install flake8==2.5.4
    gem install scss_lint -v 0.54.0
    npm install -g bootlint@0.14.2
    gem install puppet-lint -v 1.1.0
    gem install r10k -v 2.2.0
    npm install -g jsonlint@1.6.2
    gem install csvlint -v 0.3.0
    sudo apt-get update
    sudo apt-get install libxml2-utils=2.9.1+dfsg1-3ubuntu4.10
    gem install mdl -v 0.3.1
    sudo apt-get install shellcheck=0.3.3-1~ubuntu14.04.1
    npm install -g eslint babel-eslint@7.2.3
    npm install -g eslint-plugin-react@4.2.3
    gem install yaml-lint -v 0.0.7
    npm install -g dockerlint@0.2.0
    pip install restructuredtext_lint==0.17.2

## run linters
##
## @puppet-lint, the following issue needs to be checked if it has been
##     resolved, so the '--no-ensure_first_param-check' abusive flag
##     implementation (below) can be removed:
##
##     - https://github.com/rodjek/puppet-lint/issues/410
##
else
    cd "$BASEDIR" || exit 1
    flake8 . --config=test/lint/setup.cfg || exit 1
    scss-lint src/scss/*.scss --config 'test/lint/.scss-lint.yml' || exit 1
    bootlint -d W005 interface/templates/*.html || exit 1
    sudo find puppet/environment/*/manifests -name '*.pp' -type f -exec /opt/puppetlabs/bin/puppet parser validate {} \ || exit 1
    sudo find puppet/environment/*/modules -name '*.pp' -type f -exec /opt/puppetlabs/bin/puppet parser validate {} \ || exit 1
    puppet-lint --no-variable_scope-check --no-ensure_first_param-check puppet/environment/*/modules || exit 1
    find puppet -name Puppetfile -exec sh -c 'cd "${1%/*}" && r10k puppetfile check Puppetfile' _ {} \ || exit 1
    find interface/static/data/json -name '*.json' -exec jsonlint -q {} \ -print || exit 1
    find interface/static/data/csv -name '*.csv' -exec csvlint {} \ || exit 1
    xmllint --noout interface/static/data/xml/svr*.xml --schema interface/static/data/xml/svr.xsd || exit 1
    xmllint --noout interface/static/data/xml/svm*.xml --schema interface/static/data/xml/svm.xsd || exit 1
    xmllint --noout interface/static/data/xml/*.xsd || exit 1
    mdl . --style test/lint/markdown.rb || exit 1
    erbfiles=$(find . -type f ! -name '*.erb' -exec grep -l '^#!/bin/bash' {} +) || exit 1
    shellcheck erbfiles || exit 1
    find . -name '*.sh' -type f -exec shellcheck {} \ || exit 1
    eslint . --ext=jsx -c test/lint/eslint.json || exit 1
    yaml-lint hiera/ || exit 1
    yaml-lint ./*.yaml || exit 1
    find . -name '*.dockerfile' -type f -exec dockerlint {} \ || exit 1
    find doc -name '*.rst' -type f -exec rst-lint {} \ | (! grep -E 'ERROR') || exit 1
    cd "$CWD" || exit 1
fi
